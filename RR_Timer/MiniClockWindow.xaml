<Window x:Class="RR_Timer.MiniClockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RR_Timer"
        mc:Ignorable="d"
        Title="MiniClockWindow" Height="100" Width="{x:Static SystemParameters.PrimaryScreenWidth}" WindowStyle="None" ShowInTaskbar="False" Topmost="True" Left="0" Top="0">
    <Grid>
        <Label x:Name="EventNameMini" Content="EventName" HorizontalAlignment="Left" Margin="50,10,0,0" VerticalAlignment="Top" FontSize="40"/>
        <Label x:Name="TimerMini" Content="00:00:00" HorizontalAlignment="Left" Margin="1724,-10,0,0" VerticalAlignment="Center" FontSize="40"/>

    </Grid>
</Window>
