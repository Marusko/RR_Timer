<UserControl x:Class="RR_Timer.ClockUserControl.TimerLeft"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RR_Timer.ClockUserControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Margin="0,0,200,0">
            <Label x:Name="MainClockLabel" Content="00:00:00" HorizontalAlignment="Center" FontSize="70" VerticalAlignment="Top" Margin="0,200,0,0"/>
            <Label x:Name="TimerClockLabel" Content="00:00:00" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="150" Margin="0,50,0,0"/>
        </Grid>
        <Grid Grid.Column="1">
            <Image x:Name="TimerImage" MaxHeight="150" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,400,0,0"/>
            <Image x:Name="CodeImage" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" MaxHeight="350"/>
        </Grid>
    </Grid>
</UserControl>
