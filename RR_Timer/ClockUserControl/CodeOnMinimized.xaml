<UserControl x:Class="Race_timer.ClockUserControl.CodeOnMinimized"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Width="500" Height="35">
        <Label Content="QR code will be shown for" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Margin="0,2,0,0"/>
        <Label Content="minute/s every" HorizontalAlignment="Left" Margin="250,2,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="HowLongTimeText" HorizontalAlignment="Left" Margin="195,0,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="50" TextAlignment="Center" FontSize="16" MaxLength="2" MaxLines="1"/>
        <TextBox x:Name="EveryTimeText" HorizontalAlignment="Left" Margin="365,0,0,0" TextWrapping="Wrap" Text="5" VerticalAlignment="Top" Width="50" TextAlignment="Center" FontSize="16" MaxLength="2" MaxLines="1"/>
        <Label Content="minute/s" HorizontalAlignment="Left" Margin="420,2,0,0" VerticalAlignment="Top" FontSize="16"/>
    </Grid>
</UserControl>
